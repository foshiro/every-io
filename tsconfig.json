{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": [
      "ES2019",
      "es2020.bigint",
      "es2020.string",
      "dom"
    ],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
  }
}
